{
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@poster-craft/*": ["./packages/*/index.ts"]
    }
  },
  "exclude": ["**/dist/**", "**/.next/**", "**/next.d.ts", "**/docs/**", "**/test/**"]
}
